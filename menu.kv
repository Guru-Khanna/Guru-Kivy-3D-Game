<MenuWidget>:
    canvas.before:
        Color:
            rgba:(0, 0, 0, .9)
        Rectangle:
            size:self.size
    Label:
        font_size: dp(40)
        font_name:"impact.ttf"
        text:root.parent.menutitle
        pos_hint:{"center_x": .5, "center_y": .6}
        color:0.9, 0.45, 0.5, 1
    BoxLayout:
        Button:
            font_size: dp(20)
            font_name: "TCCB____.TTF"
            text:'E    a    s    y'
            pos_hint:{"center_x": .5, "center_y": .3}
            size_hint: .000001, .1
            on_press:root.parent.startgameonclick()
            background_normal:""
            background_color:0.2, 0.7, 0.6, 1
        Button:
            font_size: dp(20)
            font_name: "TCCB____.TTF"
            text:'M    e    d    i    u    m'
            pos_hint:{"center_x": .5, "center_y": .3}
            size_hint: .000001, .1
            on_press:root.parent.startgamemediumonclick()
            background_normal:""
            background_color:0.2, 0.7, 0.6, 1
        Button:
            font_size: dp(20)
            font_name: "TCCB____.TTF"
            text:'H    a    r    d'
            pos_hint:{"center_x": .5, "center_y": .3}
            size_hint: .000001, .1
            on_press:root.parent.startgamehardonclick()
            background_normal:""
            background_color:0.2, 0.7, 0.6, 1
        Button:
            font_size: dp(20)
            font_name: "TCCB____.TTF"
            text:'Gradual Speed Increase'
            pos_hint:{"center_x": .5, "center_y": .3}
            size_hint: .000001, .1
            on_press:root.parent.startgamegisonclick()
            background_normal:""
            background_color:0.2, 0.7, 0.6, 1